<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/main">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iconItem"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:scaleType="centerCrop"
        android:padding="@dimen/icon_padding"
        android:layout_gravity="center_vertical"
        android:src="@drawable/pepe1"
        android:layout_marginTop="5dp"
        app:shapeAppearance="@style/circle"
        />



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginStart="110dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/textItem1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/list_item_text_size1"
            android:textStyle="bold"
            android:padding="@dimen/list_item_padding"
            android:hint="Name"
            android:maxLines="2"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/textItem5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/list_item_text_size5"
            android:padding="@dimen/list_item_padding"
            android:hint="Address"
            android:maxLines="2"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/textItem4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/list_item_text_size4"
            android:textStyle="bold"
            android:paddingLeft="4dp"
            android:hint="Price"
            android:maxLines="2"
            android:ellipsize="end"
            />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginStart="180dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="15dp">


            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/baseline_chat_24"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/textItem7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/list_item_text_size7"
                android:padding="@dimen/list_item_padding"
                android:hint="Chat"
                android:layout_gravity="right"
                />

            <ImageView
                android:id="@+id/heart"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/baseline_favorite_border_24"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/textItem6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:hint="Like"
                android:padding="@dimen/list_item_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/list_item_text_size6"
                />


        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1DCDC"
        android:layout_marginTop="130dp"/>
</RelativeLayout>
